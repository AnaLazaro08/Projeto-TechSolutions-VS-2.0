<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

   <style>
        body {
            background-color: #1a0000;
            color: #fff;
        }
        h2 {
            color: #ff4d4d;
        }
        .badge {
            background-color: #800000;
            color: #fff;
        }
        .btn-success {
            background-color: #ff4d4d;
            border: none;
            color: #000;
        }
        .btn-success:hover {
            background-color: #cc0000;
            color: #fff;
        }
        .btn-primary {
            background-color: #990033;
            border: none;
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #800020;
            color: #fff;
        }
        .btn-danger {
            background-color: #cc0033;
            border: none;
            color: #fff;
        }
        .btn-danger:hover {
            background-color: #800000;
        }
        .table {
            color: #fff;
        }
        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: rgba(204, 0, 51, 0.1);
        }
        .table-striped > tbody > tr:nth-of-type(even) {
            background-color: rgba(255, 77, 77, 0.05);
        }
        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 5px;
        }
        .icon-home {
    color: #ff4d4d;
    font-size: 28px;
    text-decoration: none;
    float: right;
}

.icon-home:hover {
    color: #cc0000;
}

</style>
</head>
<body>
    <div class="container my-4">
        <div class="jumbotron">
            <div class="row">
                <h2>NODE - CRUD <span class="badge">v 2.0.0</span></h2>
            </div>
        </div>
        <div class="row mt-3">
            <p>
                <a href="/" class="icon-home">
                    <i class="fas fa-home"></i>
                </a>
                <a class="btn btn-success" href="/add">Adicionar</a>
            </p>

            
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">IMAGEM</th>
                        <th scope="col">ID</th>
                        <th scope="col">NOME</th>
                        <th scope="col">DESCRIÇÃO</th>
                        <th scope="col">PREÇO</th>
                        <th scope="col">AÇÃO</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %>
                        <tr>
                            <td>
                                <% if (produto.imagem) { %>
                                    <img src="<%= produto.imagem %>" class="product-img" alt="Imagem">
                                <% } else { %>
                                    <span class="text-muted">Sem imagem</span>
                                <% } %>
                            </td>
                            <td><%= produto.id %></td>
                            <td><%= produto.name %></td>
                            <td><%= produto.descricao %></td>
                            <td>R$ <%= parseFloat(produto.preco).toFixed(2).replace('.', ',') %></td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/edit/<%= produto.id %>">Editar</a>
                                <a class="btn btn-danger btn-sm" href="/delete/<%= produto.id %>">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="row mt-3">
            <p>

            </p>
            </div>
    </div>
</body>
</html>

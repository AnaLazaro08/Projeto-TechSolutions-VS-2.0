<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tela de Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            background-color: #1a0000;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #330000;
            padding: 30px 40px;
            border-radius: 8px;
            box-shadow: 0 0 15px #800000;
            width: 350px;
        }

        h2 {
            color: #ff4d4d;
            text-align: center;
            margin-bottom: 25px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            color: #ff4d4d;
            font-weight: bold;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1.5px solid #4d0000;
            border-radius: 5px;
            background-color: #660000;
            color: #fff;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border-color: #ff4d4d;
            outline: none;
        }

        .submit-btn {
            width: 100%;
            padding: 12px 0;
            background-color: #ff4d4d;
            border: none;
            border-radius: 5px;
            color: #000;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #cc0000;
            color: #fff;
        }

        .register-btn {
            width: 100%;
            padding: 12px 0;
            background-color: transparent;
            border: 1.5px solid #ff4d4d;
            border-radius: 5px;
            color: #ff4d4d;
            font-weight: bold;
            font-size: 15px;
            margin-top: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .register-btn:hover {
            background-color: #cc0000;
            color: #fff;
            border-color: #cc0000;
        }

        .icon-home {
            color: #ff4d4d;
            font-size: 21px;
            text-decoration: none;
            position: absolute;
            top: 20px;
            left: 20px;
        }

        .icon-home:hover {
            color: #cc0000;
        }
    </style>
</head>
<body>
    <!-- Ícone de casinha no canto superior esquerdo -->
    <a href="/" class="icon-home">
        <i class="fas fa-home"></i>
    </a>

    <div class="container">
        <h2>Login</h2>
        <form onsubmit="return redirecionarParaHome()">
            <div class="input-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="input-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" class="submit-btn">Entrar</button>
        </form>

        <!-- Botão para redirecionar ao cadastro -->
        <button onclick="irParaCadastro()" class="register-btn">Ainda não tem conta? Cadastrar</button>
    </div>

    <script>
        function redirecionarParaHome() {
            setTimeout(() => {
                window.location.href = "/"; // Ajuste a rota para a página principal
            }, 300);
            return false;
        }

        function irParaCadastro() {
            window.location.href = "/cadastro"; // Ajuste para a URL correta da sua página de cadastro
        }
    </script>
</body>
</html>
